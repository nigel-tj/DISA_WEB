<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
	<h3>Capture form</h3>
      </div>
      
      <div class="title_right">
	<div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
	  <div class="input-group">
	    <input type="text" class="form-control" placeholder="Search for...">
	    <span class="input-group-btn">
	      <button class="btn btn-default" type="button">Go!</button>
	    </span>
	  </div>
	</div>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
	
	<div class="x_panel">
	  <div class="x_title">
	    <h2>Condition Category <small> fill out all required fields (*)</small></h2>
	    <ul class="nav navbar-right panel_toolbox">
	      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
	      </li>
	      <li class="dropdown">
		<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
		<ul class="dropdown-menu" role="menu">
		  <li><a href="#">Settings 1</a>
		  </li>
		  <li><a href="#">Settings 2</a>
		  </li>
		</ul>
	      </li>
	      <li><a class="close-link"><i class="fa fa-close"></i></a>
	      </li>
	    </ul>
	    <div class="clearfix"></div>
	  </div>
	  <div class="x_content">

	    <%= form_for(@condition_category) do |f| %>
	    <% if @condition_category.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@condition_category.errors.count, "error") %> prohibited this condition_category from being saved:</h2>
	      
	      <ul>
		<% @condition_category.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	      </ul>
	    </div>
	    <% end %>
	    
	    <div class="field">
	      <%= f.label :name %><br>
	      <%= f.text_field :name %>
	    </div>
	    <div class="actions">
	      <%= f.submit %>
	    </div>
	    <% end %>
	  </div>
	</div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->

